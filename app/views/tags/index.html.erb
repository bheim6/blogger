<h1>All Tags</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
  <li>
    <%= link_to tag.name, tag_path(tag), class: "tag_name", id: "tag#{tag.id}" %>
    <%= link_to "Delete", tag_path(tag), method: :delete, data: {confirm: "Do you really wish to delete #{tag.name}?"}%>
  </li>
  <% end %>
</ul>

<%= link_to "Create New Tag", new_tag_path, class: "new_tag" %>
